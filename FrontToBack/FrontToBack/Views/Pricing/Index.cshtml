 @model PricingVM  
 

<!-- Start pricing -->
    <div class="container-lg py-5">
        <div class="col-md-12 m-auto text-center py-5">

            @foreach (var package in Model.Packages)
        {

            <h1 class="pricing-header h2 semi-bold-600">@package.Name</h1>
            <p class="pricing-footer">
               @package.Description
            </p>
        }
            
        </div>


        <div class="row px-lg-3">


            <div class="col-md-4 pb-5 pt-sm-0 mt-5 px-xl-3">
                <div class="pricing-table card h-100 shadow-sm border-0 py-5">
                    <div class="pricing-table-body card-body rounded-pill text-center align-self-center p-md-0">

                        @foreach (var offerStandart in Model.OfferStandarts)
                    {
                        <i class="pricing-table-icon display-3 bx bx-package text-secondary"></i>
                        <h2 class="pricing-table-heading h5 semi-bold-600">@offerStandart.Title</h2>
                        <p>$@offerStandart.Price</p>
                        <ul class="pricing-table-body text-start text-dark px-4 list-unstyled light-300">
                            <li><i class="bx bxs-circle me-2"></i>@offerStandart.FeatureTheFrist</li>
                            <li><i class="bx bxs-circle me-2"></i>@offerStandart.FeatureTheSecond</li>
                            <li><i class="bx bxs-circle me-2"></i>@offerStandart.FeatureTheThird</li>
                            <li><i class="bx bxs-circle me-2"></i>@offerStandart.FeatureTheForuth</li>
                        </ul>
                        <div class="pricing-table-footer pt-5">
                            <a href="#" class="btn rounded-pill px-4 btn-outline-primary light-300">Get Now</a>
                        </div>

                    }
                        
                    </div>
                </div>
            </div>


            <div class="col-md-4 pt-sm-0 pt-3 px-xl-3">
                <div class="pricing-table card bg-secondary h-100 card-rounded shadow-sm border-0 py-5">
                    <div class="pricing-table-body card-body text-center text-white align-self-center p-md-0">

                        @foreach (var offerPremium in Model.OfferPremiums)
                    {

                        <i class="pricing-table-icon display-3 bx bx-package text-white py-3"></i>
                        <h2 class="pricing-table-heading h5 semi-bold-600">@offerPremium.Title</h2>
                        <p>$120/Year</p>
                        <ul class="pricing-table-list text-start text-dark px-4 list-unstyled light-300">
                            <li class="text-white"><i class="bx bxs-circle me-2"></i>@offerPremium.FeatureTheFrist</li>
                            <li class="text-white"><i class="bx bxs-circle me-2"></i>@offerPremium.FeatureTheSecond</li>
                            <li class="text-white"><i class="bx bxs-circle me-2"></i>@offerPremium.FeatureTheThird</li>
                            <li class="text-white"><i class="bx bxs-circle me-2"></i>@offerPremium.FeatureTheForuth</li>
                        </ul>
                        <div class="pricing-table-footer pt-5 pb-2">
                            <a href="#" class="btn rounded-pill px-4 btn-outline-light light-300">Get Now</a>
                        </div>

                    }
                        


                    </div>
                </div>
            </div>


            <div class="col-md-4 pb-5 pt-sm-0 mt-5 px-xl-3">
                <div class="pricing-table card h-100 shadow-sm border-0 py-5">
                    <div class="pricing-table-body card-body text-center align-self-center p-md-0">
                        @foreach (var offerPlatinum in Model.OfferPlatinums)
                    {
                        <i class="pricing-table-icon display-3 bx bx-package text-secondary"></i>
                        <h2 class="pricing-table-heading h5 semi-bold-600">@offerPlatinum.Title</h2>
                        <p>$840/Year</p>
                        <ul class="pricing-table-list text-start text-dark px-4 list-unstyled light-300">
                            <li><i class="bx bxs-circle me-2"></i>@offerPlatinum.FeatureTheFrist</li>
                            <li><i class="bx bxs-circle me-2"></i>@offerPlatinum.FeatureTheSecond</li>
                            <li><i class="bx bxs-circle me-2"></i>@offerPlatinum.FeatureTheThird</li>
                            <li><i class="bx bxs-circle me-2"></i>@offerPlatinum.FeatureTheForuth</li>
                            <li><i class="bx bxs-circle me-2"></i>@offerPlatinum.FeatureTheFifth</li>
                        </ul>
                        <div class="pricing-table-footer pt-1">
                            <a href="#" class="btn rounded-pill px-4 btn-outline-primary light-300">Get Now</a>
                        </div>
                    }
                       
                    </div>
                </div>
            </div>


        </div>
    </div>
    <!-- End Content -->





